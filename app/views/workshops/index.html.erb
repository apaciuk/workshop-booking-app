<h2>Workshops <span class="badge bg-warning"><%= image_tag avatar_path(current_user, size: 40), height: 32, width: 32, class: "rounded" %></span></h2>
<div class="col-lg-12">
 <div class="row">
    <% @workshops.each do |workshop| %>
      <div class="col-lg-6">
    <div class="card mt-4 mb-2" id="<%= dom_id workshop %>">
  <div class="card-header bg-light">
  <h5><%= workshop.name.capitalize %> <span class="badge bg-primary"><%= link_to image_tag('logo-sm.png'), root_path, class: 'logo-sm' %></span></h5>
  </div>
    <div class="card-body">
    <p class="card-text lead"><%= truncate(workshop.description.capitalize) %>.</p> 
    <div class="workshop" data-id="<%= workshop.id %>">
    <ul class="list-group">
      <li class="list-group-item"><h4><span class="badge bg-success">From: <%= workshop.total_duration %></span></h4></li>
       <li class="list-group-item"><h4><span class="badge bg-primary">From: <%= workshop.start_time %> To <%= workshop.end_time %></span></h4></li>
     </ul>
 </div>
 </div>
 <div class="card-footer bg-light text-muted">
 
  <span class="badge bg-secondary">Every Day From: <%= workshop.start_time %> To <%= workshop.end_time %></span>
  </div>
</div>
   <%= link_to 'View Details', workshop_path(workshop), class: "btn btn-primary mt-2" %>
      </div>
   <% end %>
  </div>
  </div>





