<%= form_with(model: [:admin, post]) do |form| %>
  <div class="form-group row mb-2">
    <%= form.label :title, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :title, class: "form-control" %>
      <%= tag.div post.errors[:title].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :body, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_area :body, class: "form-control" %>
      <%= tag.div post.errors[:body].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :published, class: "form-check-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.check_box :published, class: "form-check-input" %>
      <%= tag.div post.errors[:published].first, class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-footer">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_posts_path, class: "btn btn-white" %>
  </div>
<% end %>
