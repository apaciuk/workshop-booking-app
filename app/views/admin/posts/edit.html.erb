<%= render "page_header" do %>
  <%= render "page_header_breadcrumb", title: "Editing post" do %>
  <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
  <li class="breadcrumb-item"><%= link_to "Posts", admin_posts_path %></li>
  <li class="breadcrumb-item"><%= link_to "Show this post", [:admin, @post] %></li>
  <% end %>
<% end %>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-body">
        <%= render "form", post: @post %>
      </div>
    </div>
  </div>
</div>
