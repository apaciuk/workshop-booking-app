<%= render "page_header" do %>
  <%= render "page_header_breadcrumb", title: "Showing post" do %>
    <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
    <li class="breadcrumb-item"><%= link_to "Posts", admin_posts_path %></li>
  <% end %>

  <%= render "page_header_actions" do %>
    <%= link_to "Edit post", edit_admin_post_path(@post), class: "btn btn-primary" %>
    <%= button_to "Delete post", [:admin, @post], method: :delete, "data-confirm": "Are you sure?", form_class: "d-inline", class: "btn btn-white" %>
  <% end %>
<% end %>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Post details</h3>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-md-3">Title</dt>
          <dd class="col-md-9"><%= @post.title %></dd>
          <dt class="col-md-3">Body</dt>
          <dd class="col-md-9"><%= @post.body %></dd>
          <dt class="col-md-3">Published</dt>
          <dd class="col-md-9"><%= @post.published %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
